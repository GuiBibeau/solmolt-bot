{
  "name": "serious-trader-ralph",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "bin": {
    "ralph": "dist/bin/ralph.js"
  },
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:cli": "bun run src/bin/ralph.ts",
    "build": "bun build src/bin/ralph.ts --outdir dist/bin --target node --format esm",
    "start": "bun dist/bin/ralph.js",
    "gateway": "bun run src/bin/ralph.ts gateway start",
    "gateway:stop": "bun run src/bin/ralph.ts gateway stop",
    "gateway:restart": "bun run src/bin/ralph.ts gateway restart",
    "status": "bun run src/bin/ralph.ts status",
    "autopilot:start": "bun run src/bin/ralph.ts autopilot start",
    "autopilot:stop": "bun run src/bin/ralph.ts autopilot stop",
    "tool": "bun run src/bin/ralph.ts tool",
    "doctor": "bun run src/bin/ralph.ts doctor",
    "update": "bun run src/bin/ralph.ts update",
    "agent:message": "bun run src/bin/ralph.ts agent:message",
    "help": "bun run src/bin/ralph.ts --help",
    "test": "bun test",
    "test:unit": "bun test tests/unit",
    "test:integration": "bun test tests/integration",
    "typecheck": "bunx tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "edge:dev": "cd apps/worker && npm run dev:local",
    "edge:db:migrate:local": "cd apps/worker && npm run db:migrate:local",
    "edge:loop:enable:local": "cd apps/worker && npm run loop:enable:local",
    "edge:loop:disable:local": "cd apps/worker && npm run loop:disable:local",
    "edge:loop:config:dca:local": "cd apps/worker && npm run loop:config:dca:local",
    "edge:loop:config:dca:simulate:local": "cd apps/worker && npm run loop:config:dca:simulate:local",
    "edge:loop:config:rebalance:local": "cd apps/worker && npm run loop:config:rebalance:local",
    "edge:loop:status:local": "cd apps/worker && npm run loop:status:local",
    "edge:loop:tick:local": "cd apps/worker && npm run loop:tick:local"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "@ellipsis-labs/phoenix-sdk": "^2.0.3",
    "@openbook-dex/openbook-v2": "^0.2.10",
    "@solana/web3.js": "^1.98.4",
    "bs58": "^5.0.0",
    "commander": "^12.1.0",
    "ws": "^8.17.0",
    "yaml": "^2.5.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/node": "^20.14.2",
    "@types/ws": "^8.5.10",
    "turbo": "^2.8.3",
    "typescript": "^5.5.4"
  },
  "packageManager": "bun@1.3.0"
}
